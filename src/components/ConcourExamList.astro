---
import type { Class } from "../data/types";

interface Props {
  concourExams: Class[];
  className?: string;
}

const { concourExams, className } = Astro.props;
---

<div
  class={`mt-4 flex flex-[1_0_auto] bg-beige flex-wrap mx-auto gap-x-5 rounded-lg px-5 py-6 sm:gap-x-7 gap-y-3 sm:px-5 ${
    concourExams.length === 0 && "bg-opacity-80 items-center justify-center"
  } ${className}`}>
  {
    concourExams.length > 0 ? (
      concourExams.map((exam) => (
        <a
          href={exam.link}
          target="_blank"
          rel="noreferrer"
          class="flex items-center gap-2 leading-tight hover:underline xs:text-lg">
          <span class="flex-shrink-0">
            <img src="/images/document-icon.svg" alt="text document icon" width="35" height="35" />
          </span>
          <span>{exam.title}</span>
        </a>
      ))
    ) : (
      <>
        <p class="text-center text-sm">
          No content has been added yet. Please consider contributing!
        </p>
        <a
          href="https://github.com/yamanidev/octolib.org/blob/main/CONTRIBUTIONS.md"
          class="inline-block rounded-md bg-blue-light px-5 py-1 text-sm font-bold text-beige transition hover:bg-blue-dark"
          rel="noreferrer"
          target="_blank">
          Contribute
        </a>
      </>
    )
  }
</div>
